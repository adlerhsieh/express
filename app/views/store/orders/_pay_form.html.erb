<%= form_tag ENV["paypal_checkout_url"] do %>
  <%= hidden_field_tag :cmd, "_s-xclick" %>
  <%= hidden_field_tag :encrypted, @order.paypal_url(store_order_url(@order)) %>
  <% if @order.transfer %>
    <%= submit_tag "Paypal付款", @button_class.merge(:disabled => "disabled") %>
  <% else %>
    <%= submit_tag "Paypal付款", @button_class %>
  <% end %>
<% end %>
  <% if @order.transfer %>
    <%= button_to "修改轉帳資訊", edit_store_order_payment_transfer_path(@order, @order.transfer), @button_class %>
  <% else %>
    <%= button_to "轉帳付款", new_store_order_payment_transfer_path(@order), @button_class %>
  <% end %>
