<h2>管理介面</h2>
<div class="col-lg-12">
  <% if @transfer %>
    <div class="col-sm-2 column admin">
      <h4>轉帳資訊</h4>
      <%= link_to "刪除轉帳資訊", store_order_payment_transfer_path(@order, @transfer), method: :delete, class: "btn btn-danger" %>
      <%= link_to "確認轉帳資訊", confirm_store_order_payment_transfer_path(@order, @transfer), method: :post, class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="col-sm-2 column admin">
    <h4>出貨控制</h4>
    <%= link_to "已出貨", "", class: "btn btn-default" %>
    <%= link_to "已送達", "", class: "btn btn-primary" %>
  </div>
  <div class="col-sm-2 column admin">
    <h4>退貨</h4>
    <%= link_to "消費者退回", "", class: "btn btn-danger" %>
    <%= link_to "已收到退回", "", class: "btn btn-warning" %>
  </div>
  <div class="col-sm-2 column admin">
    <h4>備註</h4>
    <%= form_tag "" do %>
      <%= text_field_tag :note, "", class: "form-control", placeholder: "備註" %>
      <%= submit_tag "送出", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
