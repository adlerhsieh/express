<%= render partial: "users/nav" %>
<% if @orders.size > 0 %>
  <h2>所有訂單</h2>
  <div class="order col-sm-12">
    <table class="table items">
      <thead>
        <th>序號</th>
        <th>品項</th>
        <th>數量</th>
        <th>下單時間</th>
        <th>金額(新台幣)</th>
        <th>狀態</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.token[0..7], store_order_path(order), target: "_blank" %></td>
            <td><%= order.items.count %></td>
            <td><%= order.items.map(&:quantity).inject(0){|r,m|r+m} %></td>
            <td><%= order.order_time.strftime("%Y-%m-%d") %></td>
            <td><%= order.price %></td>
            <td><%= status_print(order.aasm_state) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <h4 style="margin-top: 40px;">您還沒有下過訂單。<%= link_to "點此從購物車下單！", store_order_path(current_order) if current_order %></h4>
<% end %>
