  <div class="order col-sm-12">
    <table class="table items">
      <thead class="header-tr">
        <% if current_user.is_admin %>
          <th>ID</th>
          <th>消費者</th>
        <% end %>
        <th>序號</th>
        <th>金額(新台幣)</th>
        <th>下單時間</th>
        <th>付款時間</th>
        <th>出貨時間</th>
        <th>狀態</th>
        <th></th>
      </thead>
      <tbody>
        <% orders.each do |order| %>
          <tr class="<%= highlight_pending(order) if current_user.is_admin %>">
            <% if current_user.is_admin %>
              <td><%= order.user.id %></td>
              <td><%= order.user.name %></td>
            <% end %>
            <td><%= order.token[0..7] %></td>
            <td><%= order.price %></td>
            <td><%= time(order.order_time) %></td>
            <td><%= time(order.pay_time) %></td>
            <td><%= time(order.shipping_time) %></td>
            <td><%= status_print(order.aasm_state) %></td>
            <td><%= link_to "檢視", store_order_path(order), class: "btn btn-primary" %></td>
            <!-- <td><%= link_to "刪除", store_order_path(order), method: :delete %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

