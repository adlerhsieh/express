  <!-- <% unless current_user %> -->
  <!--   <p>* 若未登入，購物車內容僅會保留7天。</p> -->
  <!-- <% end %> -->
</div>

<div class="buttons col-lg-12">
  <%= action_button %>
  <%= stock_warning %>
</div>

