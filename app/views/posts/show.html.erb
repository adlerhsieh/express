<div class="row">

  <!-- Blog Post Content Column -->
  <div class="col-lg-8">

    <!-- Blog Post -->

    <!-- Title -->
    <h1><%= @post[:title] %></h1>

    <!-- Author -->
    <p><a href="#"><%= @post.author %></a> @ <%= @post.created_at.strftime("%Y-%m-%d") %></p>
    <hr>

    <!-- Post Content -->
    <%= @post.parse %>
    <hr>


  </div>

  <%= render partial: "widgets" %>

</div>
<!-- /.row -->
