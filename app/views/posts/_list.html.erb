<div class="column year-column">
  <table>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="td-left"><h4><%= link_to post.title, post_path(post[:slug]) %></h4></td>
          <td class="td-right"><span class="date-display"><%= post[:display_date].strftime("%Y-%m-%d") %></span></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @posts.length < 1 %>
    <p class="no-content">無符合內容</p>
  <% end %>
</div>
